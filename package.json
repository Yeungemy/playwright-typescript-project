{
    "name": "playwright-framework-prject",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "npx playwright test --project=chromium",
        "ci": "npx playwright test --project=chromium --workers=1",
        "headed": "npx playwright test src/tests/e2e/homePage/login.spec.ts --project=chromium --headed",
        "ui": "npx playwright test --project=chromium --ui",
        "e2e": "npx playwright test src/e2e/tests --project=chromium",
        "api": "npx playwright test src/tests/api --project=chromium",
        "smoke": "npx playwright test --grep @Smoke --project=chromium",
        "sanity": "npx playwright test --grep @Sanity --project=chromium",
        "regression": "npx playwright test --grep @Regression --project=chromium",
        "debug:token": "npx playwright test src/tests/api/specs/token.spec.ts --project=chromium --headed --debug --trace=on",
        "debug:file": "cross-env FILE=src/tests/api/specs/token.spec.ts npm run debug:runfile",
        "debug:runfile": "npx playwright test $FILE --project=chromium --headed --debug --trace=on",
        "debug:grep": "cross-env NAME='Test Name Here' npm run debug:runname",
        "debug:runname": "npx playwright test --grep \"$NAME\" --project=chromium --headed --debug --trace=on",
        "flaky": "npx playwright test --project=chromium --repeat-each=2",
        "allure:install": "npm install --save-dev allure-playwright",
        "allure:remove": "rimraf dist/test-report/allure-results dist/test-report/allure-report",
        "allure:generate": "npx allure generate dist/test-report/allure-results --clean -o dist/test-report/allure-report",
        "allure:open": "allure open dist/test-report/allure-report",
        "report": "npm run allure:generate && npm run allure:open",
        "test:ci": "npm run allure:remove && (npm run ci || exit 0) && npm run allure:generate",
        "test:allure": "npm run allure:remove && npm run test && npm run allure:generate && npm run allure:open",
        "test:report:fail": "npm run allure:remove && npm run test || echo Test failed but continuing... && npm run allure:generate && npm run allure:open",
        "test:report:pass": "npm run allure:remove && npm run test && npm run allure:generate && npm run allure:open",
        "pretest": "tsc --noEmit",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write ."
    },
    "keywords": [],
    "license": "ISC",
    "devDependencies": {
        "@playwright/test": "^1.52.0",
        "@types/mssql": "^9.1.7",
        "@types/node": "^22.15.17",
        "@types/winston": "^2.4.4",
        "allure-playwright": "^3.2.2",
        "cross-env": "^7.0.3",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "@faker-js/faker": "^9.7.0",
        "@wdio/allure-reporter": "^9.13.0",
        "dotenv": "^16.5.0",
        "mssql": "^11.0.1",
        "zod": "^3.25.20"
    }
}
